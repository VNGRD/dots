set window-title-basename "true"
set selection-clipboard "clipboard"

# Dracula color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

#
# Dracula color theme
#

set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#282A36" # Foreground
set notification-warning-bg     "#ffb86c" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#ffffff" # Background
set notification-fg             "#282A36" # Foreground

set completion-bg               "#ffffff" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#ffffff" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#282A36" # Foreground

set index-bg                    "#ffffff" # Background
set index-fg                    "#282A36" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#282A36" # Foreground

set inputbar-bg                 "#ffffff" # Background
set inputbar-fg                 "#282A36" # Foreground
set statusbar-bg                "#ffffff" # Background
set statusbar-fg                "#282A36" # Foreground

set highlight-color             "#ffb86c" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#ffffff" # Background
set default-fg                  "#282A36" # Foreground

set render-loading              true
set render-loading-fg           "#ffffff" # Background
set render-loading-bg           "#282A36" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#ffffff" # Background
set recolor-darkcolor           "#282A36" # Foreground

#
# Font settings
#
set font			"cozettevector 9"

#
# Startup options
#
set adjust-open width
set recolor true
